<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChatApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChatApp"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent
        Title="Chat List"
        ContentTemplate="{DataTemplate local:ChatListPage}"
        Route="ChatListPage" />

    <ShellContent
        Title="Chat Message"
        ContentTemplate="{DataTemplate local:ChatMessagePage}"
        Route="ChatMessagePage" />

</Shell>
